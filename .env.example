# E-exam-prepare Environment Variables

# Server
DEBUG=true
ENV=development

# Database (used by docker-compose & backend)
POSTGRES_USER=exam_prep
POSTGRES_PASSWORD=exam_prep_dev
POSTGRES_DB=exam_prep
DATABASE_URL=postgresql+psycopg://exam_prep:exam_prep_dev@localhost:5432/exam_prep

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# RAG Service
RAG_SERVICE_URL=http://localhost:8001
LLAMA_INDEX_PROVIDER=groq

# LLM API Keys (at least one required)
GROQ_API_KEY=gsk_your-groq-api-key-here
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Vector Store
VECTOR_STORE_TYPE=pgvector
PINECONE_API_KEY=
PINECONE_INDEX_NAME=exam-prep

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=E-exam-prepare
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Optional: LlamaCloud (advanced PDF parsing)
LLAMA_CLOUD_API_KEY=

# Optional: Neo4j (for scaling PropertyGraph)
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j
